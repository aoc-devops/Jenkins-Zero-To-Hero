pipeline {
    agent any
    environment {
        DOCKER_CREDS = credentials('docker_creds')
    }
    stages {
        stage('docker_login'){
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker_creds', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USER_NAME')]) {
                        sh 'docker image pull amitdevops12/ubuntu-test-today' 
                }
            }

        }
    }
}